{
  "name": "electron-angular-demo",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/electron-angular-demo/src",
  "projectType": "application",
  "tags": [],
  "implicitDependencies": ["demo-angular"],
  "targets": {
    "build": {
      "dependsOn": ["^build"]
    },
    "electron": {
      "configurations": {
        "build": {
          "dependsOn": ["^build"],
          "options": {
            "commands": ["nx run electron-angular-demo:build"],
            "parallel": false
          }
        },
        "serve": {
          "commands": [
            "nx run demo-angular:serve",
            "nx run electron-angular-demo:serve"
          ],
          "parallel": true
        }
      },
      "executor": "nx:run-commands",
      "defaultConfiguration": "serve"
    },

    "dist": {
      "dependsOn": [{
        "projects" : ["electron-angular-demo"],
        "target": "electron:build"
      }],
      "executor":"@erickrodrcodes/nx-electron-vite:build-electron",
      "options": {
        "hostProject": "electron-angular-demo",
        "guestProject": "demo-angular",
        "mainOutputPath": "dist/apps/electron-angular-demo-executable",
        "mainOutputFilename": "main.js",
        "author": "Erick Rodriguez",
        "description": "An application that logs medical usage and generate some reports"
      }
    },

    "test": {
      "executor": "@nx/jest:jest",
      "dependsOn": ["^test"],
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/electron-angular-demo/jest.config.ts"
      }
    },
    "lint": {
      "dependsOn": ["^lint"]
    }
  }
}
